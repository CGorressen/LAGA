<UserControl x:Class="LAGA.ArtikelBearbeiten"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- Style für Textboxen -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style für schreibgeschützte Textbox (Bezeichnung) -->
        <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource InputTextBoxStyle}">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="Foreground" Value="#FF808080"/>
        </Style>

        <!-- Style für ComboBoxen -->
        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style für Labels -->
        <Style x:Key="InputLabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <!-- Style für CheckBoxes -->
        <Style x:Key="InputCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style für Buttons -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titel -->
        <TextBlock Grid.Row="0" Text="Artikel bearbeiten" FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Eingabefelder -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">

                    <!-- Bezeichnung (schreibgeschützt) -->
                    <Label Content="Bezeichnung" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="txtBezeichnung" Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <!-- Lieferant -->
                    <Label Content="Lieferant" Style="{StaticResource InputLabelStyle}"/>
                    <ComboBox x:Name="cmbLieferant" Style="{StaticResource InputComboBoxStyle}"
                              DisplayMemberPath="Bezeichnung" SelectedValuePath="Id"
                              SelectionChanged="InputField_Changed"/>

                    <!-- Externe Artikel ID (Lieferant) -->
                    <Label Content="Externe Lieferanten ID" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="txtExterneArtikelIdLieferant" Style="{StaticResource InputTextBoxStyle}"
                             TextChanged="InputField_Changed"/>

                </StackPanel>

                <StackPanel Grid.Column="2">

                    <!-- Hersteller -->
                    <Label Content="Hersteller" Style="{StaticResource InputLabelStyle}"/>
                    <ComboBox x:Name="cmbHersteller" Style="{StaticResource InputComboBoxStyle}"
                              DisplayMemberPath="Bezeichnung" SelectedValuePath="Id"
                              SelectionChanged="InputField_Changed"/>

                    <!-- Lieferzeit -->
                    <Label Content="Lieferzeit (Tage)" Style="{StaticResource InputLabelStyle}"/>
                    <ComboBox x:Name="cmbLieferzeit" Style="{StaticResource InputComboBoxStyle}"
                              SelectionChanged="InputField_Changed"/>

                    <!-- Externe Artikel ID (Hersteller) -->
                    <Label Content="Externe Hersteller ID" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="txtExterneArtikelIdHersteller" Style="{StaticResource InputTextBoxStyle}"
                             TextChanged="InputField_Changed"/>

                </StackPanel>

                <StackPanel Grid.Column="4">

                    <!-- Kostenstelle -->
                    <Label Content="Kostenstelle" Style="{StaticResource InputLabelStyle}"/>
                    <ComboBox x:Name="cmbKostenstelle" Style="{StaticResource InputComboBoxStyle}"
                              DisplayMemberPath="Bezeichnung" SelectedValuePath="Id"
                              SelectionChanged="InputField_Changed"/>

                    <!-- Lagerort -->
                    <Label Content="Lagerort" Style="{StaticResource InputLabelStyle}"/>
                    <ComboBox x:Name="cmbLagerort" Style="{StaticResource InputComboBoxStyle}"
                              DisplayMemberPath="Bezeichnung" SelectedValuePath="Id"
                              SelectionChanged="InputField_Changed"/>

                    <!-- Einheit -->
                    <Label Content="Einheit" Style="{StaticResource InputLabelStyle}"/>
                    <CheckBox x:Name="chkKartonMitEinzelteilen" Content="Karton mit mehreren Einzelteilen" 
                              Style="{StaticResource InputCheckBoxStyle}"
                              Checked="Einheit_Changed" Unchecked="Einheit_Changed"/>
                    <CheckBox x:Name="chkEinzelteil" Content="Einzelteil" 
                              Style="{StaticResource InputCheckBoxStyle}"
                              Checked="Einheit_Changed" Unchecked="Einheit_Changed"/>

                    <!-- Mindestbestand -->
                    <Label Content="Mindestbestand" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="txtMindestbestand" Style="{StaticResource InputTextBoxStyle}"
                             TextChanged="InputField_Changed"/>

                    <!-- Maximalbestand -->
                    <Label Content="Maximalbestand" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="txtMaximalbestand" Style="{StaticResource InputTextBoxStyle}"
                             TextChanged="InputField_Changed"/>

                </StackPanel>

            </Grid>
        </ScrollViewer>

        <!-- Button-Bereich -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" 
                    Margin="0,20,0,0">

            <!-- Speichern Button (dunkelgrau, zunächst deaktiviert) -->
            <Button x:Name="btnSpeichern" Content="Speichern" 
                    Style="{StaticResource ActionButtonStyle}"
                    Background="#FF404040" Foreground="White"
                    IsEnabled="False"
                    Click="BtnSpeichern_Click"/>

            <!-- Abbrechen Button (rot) -->
            <Button x:Name="btnAbbrechen" Content="Abbrechen"
                    Style="{StaticResource ActionButtonStyle}"
                    Background="#FFD32F2F" Foreground="White"
                    Click="BtnAbbrechen_Click"/>

        </StackPanel>

    </Grid>
</UserControl>