<Window x:Class="LAGA.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Barcode-Fehler" 
        Height="220" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        Background="#FFF9F9F9">

    <Window.Resources>
        <!-- Style für das Warning Symbol -->
        <Style x:Key="WarningSymbolStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Fill" Value="#FFFF9800"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style für den Warning Text im Symbol -->
        <Style x:Key="WarningTextStyle" TargetType="TextBlock">
            <Setter Property="Text" Value="⚠"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,-2,0,0"/>
        </Style>

        <!-- Style für den Nachrichtentext -->
        <Style x:Key="MessageTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="LineHeight" Value="20"/>
        </Style>

        <!-- Style für den OK Button -->
        <Style x:Key="OKButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Warning Symbol oben mittig -->
        <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Ellipse Style="{StaticResource WarningSymbolStyle}"/>
            <TextBlock Style="{StaticResource WarningTextStyle}"/>
        </Grid>

        <!-- Nachrichtentext zentriert -->
        <TextBlock x:Name="txtMessage" 
                   Grid.Row="1"
                   Text="Fehlermeldung" 
                   Style="{StaticResource MessageTextStyle}"
                   MaxWidth="380"
                   Margin="20,0"/>

        <!-- OK Button unten -->
        <Button x:Name="btnOK" 
                Grid.Row="2"
                Content="OK" 
                Style="{StaticResource OKButtonStyle}"
                Margin="0,20,0,0"
                Click="BtnOK_Click"
                IsDefault="False"
                IsCancel="False"/>
    </Grid>
</Window>