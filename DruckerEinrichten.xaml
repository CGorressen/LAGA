<Window x:Class="LAGA.DruckerEinrichten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drucker einrichten"
        Height="393"
        Width="521"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        Background="#F5F5F5">

    <!-- Hauptcontainer -->
    <Grid Margin="20">
        <!-- Zeilen-Definitionen -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Überschrift -->
            <RowDefinition Height="20"/>
            <!-- Abstand -->
            <RowDefinition Height="Auto"/>
            <!-- Erklärungstext -->
            <RowDefinition Height="15"/>
            <!-- Abstand -->
            <RowDefinition Height="Auto"/>
            <!-- Drucker-Auswahl -->
            <RowDefinition Height="20"/>
            <!-- Abstand -->
            <RowDefinition Height="Auto"/>
            <!-- Status-Anzeige -->
            <RowDefinition Height="*"/>
            <!-- Flexible Lücke -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Überschrift -->
        <TextBlock Grid.Row="0" 
                   Text="Etikettendrucker auswählen" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="#333333"
                   HorizontalAlignment="Center"/>

        <!-- Erklärungstext -->
        <TextBlock Grid.Row="2" 
                   TextWrapping="Wrap" 
                   Foreground="#666666"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   TextAlignment="Center">
            <Run Text="Wählen Sie den Drucker aus, der für den Druck von Etiketten verwendet werden soll."/>
            <LineBreak/>
            
        </TextBlock>

        <!-- Drucker-Auswahl Container -->
        <Border Grid.Row="4" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Label für Drucker-Auswahl -->
                <TextBlock Grid.Row="0" 
                           Text="Verfügbare Drucker:" 
                           FontWeight="SemiBold" 
                           Foreground="#333333"
                           FontSize="14"/>

                <!-- Drucker-ComboBox -->
                <ComboBox Grid.Row="2" 
                          x:Name="cmbDrucker" 
                          Height="35"
                          FontSize="13"
                          Background="White"
                          BorderBrush="#CCCCCC"
                          SelectionChanged="CmbDrucker_SelectionChanged">

                    <!-- Placeholder-Text wenn keine Drucker verfügbar -->
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Style.Triggers>
                                <Trigger Property="HasItems" Value="False">
                                    <Setter Property="Background" Value="#FFEEEE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Status-Anzeige -->
        <Border Grid.Row="6" 
                x:Name="statusBorder" 
                BorderBrush="#4CAF50" 
                BorderThickness="1" 
                CornerRadius="3" 
                Padding="10"
                Background="#E8F5E8"
                Visibility="Collapsed">
            <TextBlock x:Name="txtStatus" 
                       Text="" 
                       FontSize="12" 
                       Foreground="#2E7D32"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Button-Container -->
        <StackPanel Grid.Row="8" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">

            <!-- Speichern-Button -->
            <Button x:Name="btnSpeichern" 
                    Content="Schließen und speichern" 
                    Width="180" 
                    Height="40"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnSpeichern_Click"
                    IsEnabled="False"
                    Margin="0,0,10,0">

                <!-- Button-Stil -->
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Abbrechen-Button -->
            <Button x:Name="btnAbbrechen" 
                    Content="Abbrechen" 
                    Width="120" 
                    Height="40"
                    FontSize="13"
                    Background="#F44336"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnAbbrechen_Click"
                    Margin="10,0,0,0">

                <!-- Button-Stil -->
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E53935"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

    </Grid>
</Window>