<UserControl x:Class="LAGA.StartFenster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <UserControl.Resources>
        <!-- Style für Warnmeldungen-Box mit Animation -->
        <Style x:Key="WarnungsBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="400"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                Storyboard.TargetProperty="RenderTransform.X"
                                From="400" 
                                To="0" 
                                Duration="0:0:1.2"
                                BeginTime="0:0:0.5">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style für Warnmeldungen-Text -->
        <Style x:Key="WarnungsTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style für Warn-Info-Fenster Overlay -->
        <Style x:Key="WarnInfoOverlayStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="25,20"/>
            <Setter Property="Margin" Value="40,0,40,40"/>
            <Setter Property="MaxWidth" Value="450"/>
            <Setter Property="MinWidth" Value="350"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Color="Black" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style für Warn-Info-Titel -->
        <Style x:Key="WarnInfoTitelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Style für Warn-Info-Text -->
        <Style x:Key="WarnInfoTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="20"/>
        </Style>

        <!-- Style für Haupt-Text -->
        <Style x:Key="HauptTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#FF404040"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="20"/>
        </Style>

        <!-- Style für Scanner-Bild -->
        <Style x:Key="ScannerImageStyle" TargetType="Image">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="190"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="20"/>
        </Style>

        <!-- Unsichtbares TextBox für Scanner-Eingaben -->
        <Style x:Key="HiddenScannerInputStyle" TargetType="TextBox">
            <Setter Property="Width" Value="0"/>
            <Setter Property="Height" Value="0"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Warnmeldungen-Box oben rechts (ursprünglich vorhanden) -->
        <Border x:Name="borderWarnmeldungen" Style="{StaticResource WarnungsBoxStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Grüner Punkt -->
                <Ellipse Width="13" Height="13" Fill="#FF4CAF50" 
                         VerticalAlignment="Center" Margin="0,1,6,0"/>
                <!-- Text -->
                <TextBlock x:Name="txtWarnmeldungen" 
                           Text="Aktuell sind keine Warnmeldungen vorhanden."
                           Style="{StaticResource WarnungsTextStyle}"/>
            </StackPanel>
        </Border>

        <!-- Hauptinhalt mittig zentriiert -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Scanner-Aufforderung -->
            <TextBlock Text="Bitte scannen Sie den Barcode, um fortzufahren."
                       Style="{StaticResource HauptTextStyle}"/>

            <!-- Scanner-Grafik - Direkter Pfad aus Hauptverzeichnis -->
            <Image x:Name="imgScanner" 
                   Source="Bilder/scanner.png"
                   Style="{StaticResource ScannerImageStyle}"/>
        </StackPanel>

        <!-- Verstecktes TextBox für Scanner-Eingaben -->
        <TextBox x:Name="txtScannerInput" 
                 Style="{StaticResource HiddenScannerInputStyle}"
                 TextChanged="TxtScannerInput_TextChanged"
                 KeyDown="TxtScannerInput_KeyDown"/>

        <!-- WARN-INFO-FENSTER OVERLAY (NEU) -->
        <!-- Non-blocking Notification - positioniert am unteren Rand -->
        <Border x:Name="borderWarnInfo" 
                Style="{StaticResource WarnInfoOverlayStyle}"
                Visibility="Collapsed"
                IsHitTestVisible="False">
            <Border.RenderTransform>
                <TranslateTransform x:Name="transformWarnInfo" Y="200"/>
            </Border.RenderTransform>

            <StackPanel>
                <!-- Achtung Icon -->
                <Grid Margin="0,0,0,15">
                    <Ellipse Width="50" Height="50" 
                             Fill="#FFFF6B35" 
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="⚠" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="0,-4,0,0"/>
                </Grid>

                <!-- Titel -->
                <TextBlock Text="ACHTUNG" 
                           Style="{StaticResource WarnInfoTitelStyle}"/>

                <!-- Warn-Text -->
                <TextBlock x:Name="txtWarnInfoMessage"
                           Text="Es befinden sich Warnungen im System, die nicht versendet wurden."
                           Style="{StaticResource WarnInfoTextStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>